{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "version": "0.0.1",
  "name": "DSA Tutor",
  "description": "A socratic teacher for DSA problems.",
  "icons": {
    "48": "images/extension_48.png"
  },
  "background": {
    "chromium:service_worker": "background.ts",
    "firefox:scripts": [
      "background.ts"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/*"
      ],
      "js": [
        "./content/scripts.tsx"
      ]
    }
  ],
  "author": "Chaitanya Giri"
}